---
import type { Playlist } from '@/lib/data'

interface Props {
  playlist: Playlist
}

const { playlist } = Astro.props
const { id, cover, title, artists, color } = playlist

const artistsString = artists.join(', ')
---

<a
  href={`/playlist/${id}`}
  class='playlist-item transition-all duration-300 shadow-lg hover:shadow-xl bg-zinc-500/30 flex flex-col relative p-2 overflow-hidden gap-2 pb-2 rounded-md hover:bg-zinc-800 w-44'
>
  <picture class='flex-none aspect-square w-full h-auto'>
    <img
      src={cover}
      alt={`Cover of ${title} by ${artistsString}`}
      class='object-cover w-full h-full rounded-md'
    />
  </picture>
  <div class='flex flex-auto flex-col px-2'>
    <h4 class='text-white text-sm'>
      {title}
    </h4>
    <span class='text-xs text-gray-400'>
      {artistsString}
    </span>
  </div>
</a>
